<div class='row'>
  <div class='col-3'></div>
    <div class='col-md-6'>
      <h1>Conversions &Phi; </h1>
      <p>Convert a function into cylindrical, spherical and polar coordinates</p>
      <%= form_with model: @function, url: new_conversions_path, method: :post do |s| %>
        <div style='padding-top:15px; padding-bottom: 15px'> 
          <p>Enter the function you want to convert. <%= @words %></p>
          <%= s.text_field :rectangular, class:'form-control' %>
        </div>
        <%= s.submit 'Convert Function', class:'btn btn-outline-secondary' %>
      <% end %>
      <div class='col-md-12' style='padding-top:50px'>
        <%= render 'table' %>
      </div>
    </div>
  </div>
</div>