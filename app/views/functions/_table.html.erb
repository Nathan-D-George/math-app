<table class="table" style='color:white'>
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Function</th>
      <th scope="col">Derivative (1st)</th>
      <th scope="col">Antiderivative (1st)</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% counter = 1 %>
    <% @functions.each do |f| %>
      <tr>
        <th scope="row"><%= counter %> </th>
        <td> <%= f.expression%> </td>
        <td> <%= f.derivative%> </td>
        <td> <%= f.antiderivative%> </td>
        <td> <%= link_to 'Delete', destroy_function_path(id: f.id), data:{turbo_method: :delete, turbo_confirm: "Delete?"}, class:'btn btn-outline-danger' %></td>
      </tr>
      <% counter += 1 %>
    <% end %>
  </tbody>
</table>