<div class='row'>
<div class='col-3'></div>
  <div class='col-md-6'>
    <h1>Vectors </h1>
    <p> Create a new vector with x, y and z components</p>    <p> <strong> Rules </strong> </p>
    <li>
      <strong> <small> cant all be zero </small> </strong> 
    </li>
    <%= form_with model: @vector, url: create_vector_path, method: :post do |s| %>
      <div class='row' style='padding-top:30px; padding-bottom: 30px'>
        <div class='col-4'>
          <p><%= s.label :î %></p>
          <%= s.text_field :i, class:'form-control' %>
        </div>
        <div class='col-4'>
          <p><%= s.label :ĵ %></p>
          <%= s.text_field :j, class:'form-control' %>
        </div>
        <div class='col-4'>
          <p><%= s.label :k̂ %></p>
          <%= s.text_field :k, class:'form-control' %>
        </div>
      </div>
      <%= s.submit 'Create Vector', class:'btn btn-outline-secondary' %>
    <% end %>
    <div class='col-md-12' style='padding-top:50px'>
      <%= render 'table' %>
    </div>
  </div>
</div>